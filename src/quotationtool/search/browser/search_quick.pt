<div id="quicksearch" class="box"
     i18n:domain="quotationtool">
  <h1 i18n:translate="quick-search-label">Quick Search</h1>
  <div class="wrapper">
  <form 
      action="/referatory/@@searchResultPage.html"
      tal:attributes="action view/actionURL"
      method="post">
    <input 
	type="hidden" value="quid_pro_quo"
	name="search.0.index" id="search.0.index"   
	tal:attributes="name string:${view/prefix}0.index;
			id string:${view/prefix}0.index;
			value view/index"/>
    <input class="quicksearch"
	type="text" value=""
	name="search.0.query" id="search.0.query"   
	tal:attributes="name string:${view/prefix}0.query;
			id string:${view/prefix}0.query"/>
    <button type="submit" 
	i18n:translate="value find-button-label">Find!</button>
  </form>
  <div class="more-links">
    <a class="more" href="/@@search.html"
        tal:attributes="href view/fullFledgedURL"
	i18n:translate="full-fledged-search-link">
      full-fledged search form</a>
  </div>
  </div>
</div>
    
  